{
    "name": "synolia/orocommerce-favorite-plugin",
    "keywords": [
        "orocommerce",
        "orocommerce-plugin",
        "favorite"
    ],
    "description": "OroCommerce Favorite Plugin",
    "homepage": "https://github.com/synolia/OroCommerceFavoritePlugin",
    "license": "EUPL-1.2",
    "authors": [
        {
            "name": "Synolia",
            "homepage": "http://www.synolia.com"
        }
    ],
    "autoload": {
        "psr-4": {"Synolia\\Bundle\\FavoriteBundle\\": "src/Synolia/Bundle/FavoriteBundle"},
        "exclude-from-classmap": ["/Tests/"]
    },
    "require": {
        "php": "~8.3.0",
        "oro/commerce": "6.0.*"
    },
    "repositories": {
        "oro": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "phpro/grumphp": "^2.3",
        "phpspec/phpspec": "^6.1",
        "phpstan/phpstan-symfony": "^1.3",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.4"
    }
}
