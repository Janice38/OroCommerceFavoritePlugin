{
    "name": "synolia/orocommerce-favorite-plugin",
    "keywords": [
        "orocommerce",
        "orocommerce-plugin",
        "favorite"
    ],
    "description": "OroCommerce Favorite Plugin",
    "homepage": "https://github.com/synolia/OroCommerceFavoritePlugin",
    "license": "EUPL-1.2",
    "authors": [
        {
            "name": "Synolia",
            "homepage": "http://www.synolia.com"
        }
    ],
    "autoload": {
        "psr-4": {"Synolia\\Bundle\\FavoriteBundle\\": "src/Synolia/Bundle/FavoriteBundle"},
        "exclude-from-classmap": ["/Tests/"]
    },
    "require": {
        "php": "~8.3.0",
        "oro/commerce": "6.0.1"
    },
    "repositories": {
        "oro": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "enlightn/security-checker": "^1.9",
        "friendsofphp/php-cs-fixer": "^3.13",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpmd/phpmd": "^2.13",
        "phpro/grumphp": "^1.15",
        "phpspec/phpspec": "^7.2",
        "phpstan/phpstan": "^1.5"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpro/grumphp": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    }
}
